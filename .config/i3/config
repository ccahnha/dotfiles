# Start i3bar to display a workspace bar (plus the system information i3status
# finds out, if available)
bar {
     i3bar_command i3bar -t
     strip_workspace_numbers yes
     status_command i3blocks
     bindsym button4 nop
     bindsym button5 nop
     bindsym button3 exec "rofi -show combi -combi-modi 'run,drun,window' \
         -modi combi -separator-style none -font 'mono 10' -columns 1 -bw 0 \
         -hide-scrollbar -no-disable-history -no-levenshtein-sort\
         -color-window '#dd201729, #312542, #b1b4b3' \
         -color-normal '#00201729, #b1b4b3, #00201729, #88008c00, #b1b4b3' \
         -color-active '#00201729, #b1b4b3, #00201729, #88008c00, #b1b4b3' \
         -color-urgent '#00201729, #b1b4b3, #00201729, #1E4E0D,   #b1b4b3'"
     separator_symbol ""
     colors {
            background #1C142400
            statusline #ffffff
            separator #666666
            focused_workspace  #37294A00 #3D2E5200 #ffffff
            active_workspace   #1C142400 #1C142400 #ffffff
            inactive_workspace #1C142400 #1C142400 #88888888
            urgent_workspace   #00300000 #00500000 #338833cc
            }
